.cards
  padding 70px 0
  background rgb(245,245,245)
  .card-line
    display flex
    justify-content space-between
    .card
      width 30%
      background #fff
      border-radius 5px
      border 1px solid #dedede
      color rgb(140,140,140)
      .card-header
        font-size 1.4em
        background rgba(0,0,0, .08)
        padding 15px
        display flex
        align-items center
        justify-content space-between
      .card-body
        margin 50px 0
        display flex
        align-items center
        justify-content center
        .money
          align-self flex-start
          margin 10px
        .card-body-value
          font-size 2.5em
          color rgb(54,53,90)
      .card-footer
        margin 15px
        display flex
        align-items center
        justify-content space-between
        .card-footer-value
          color rgb(54,53,90)
          font-size 1.3em
        .card-footer-ref
          align-self flex-end
          font-size .6em
